    <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
    <meta name="generator" content="Jekyll v4.1.1">
    <title>{% block title %} Mon portfolio {% endblock %}</title>

    {% block stylesheets %}
    <!-- Bootstrap core CSS -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
              integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <link href="{{ asset('assets/css/bootstrap.min.css') }}" rel="stylesheet">
        <link href="{{ asset('assets/css/style.css') }}" rel="stylesheet">
    {% endblock %}


    <style>
        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
        }

        @media (min-width: 768px) {
            .bd-placeholder-img-lg {
                font-size: 3.5rem;
            }
        }
    </style>
    <!-- Custom styles for this template -->
    <link href="{{ asset('assets/css/carousel.css') }}" rel="stylesheet">
</head>
<body>
    <div id="wrapper">
        <header>
            <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
                <a class="navbar-brand" href="{{ path('home_index') }}"><img src="/assets/images/logo.png" class="YClogo" alt="logo YC"></a></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse w-100 order-3 dual-collapse2" id="navbarCollapse">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item active">
                            <a class="nav-link" href="{{ path('portfolio_education') }}">Formations<span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="{{ path('portfolio_experience') }}">Expériences<span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="{{ path('portfolio_project') }}">Réalisations <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="{{ path('portfolio_skill') }}">Competences <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="{{ path('portfolio_reference') }}">Réfrences <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item">
                        {# If admin on the site user he can return on site adminisrator #}
                        {% if app.user %}
                            <a class="nav-link" href="{{path('admin')}}">Revenir au site administrateur</a>
                        {% endif %}
                        </li>
                        <li class="nav-item">
                        {# If admin connects he can see logout button #}
                        {% if app.user %}
                            <a class="nav-link nav-style" href="{{ path('app_logout') }}">Se déconnecter</a>
                        {% endif %}
                    </ul>
                </div>
            </nav>
        </header>
            <div  id="content" class="container-content">

                {% block body %} {% endblock %}

            </div>
    </div>
        <div class="sticky-top">
            <footer id="footer" class="footer-custom">
                <p>
                    &copy;2021 <br>
                    <small>&middot; <a href="{{path('contact_message')}}">Me contacter</a> &middot; <a href="{{ path('portfolio_legacy') }}">Mentions légales</a></small>
                </p>
            </footer>
        </div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="{{ asset('assets/js/bootstrap.bundle.js') }}"></script>
